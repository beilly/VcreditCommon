<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--状态栏-->
    <com.vcredit.starcredit.view.StatusBarLayout
        android:id="@+id/title_statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/dark_blue" />

    <RelativeLayout
        android:id="@+id/title_rlContainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/dark_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:maxWidth="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/titlebar_back"
                android:visibility="gone"
                android:textSize="@dimen/fontSize_18" />

            <TextView
                android:id="@+id/title_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxWidth="80dp"
                android:text=""
                android:textColor="@color/bg_white"
                android:textSize="@dimen/fontSize_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_middle_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="224dp"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="@dimen/fontSize_20" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:maxWidth="120dp"
            android:paddingRight="16dp"
            android:paddingLeft="50dp"
            android:textDirection="rtl"
            android:src="@drawable/icon_add"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="@dimen/fontSize_18" />

    </RelativeLayout>

</LinearLayout>